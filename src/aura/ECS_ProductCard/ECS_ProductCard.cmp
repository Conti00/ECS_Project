<aura:component description="ECS_ProductCard" controller="ECS_CarsManagerController">
    <aura:attribute name="carId" type="String"/>
    <aura:attribute name="car" type="Product2"/>
    <aura:attribute name="orgUrl" type="String"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <lightning:layout>
        <lightning:layoutItem size="12" >
            <lightning:card iconName="" title="{!v.car.Name}" variant="narrow">
                <div class="slds-p-horizontal--small">
                    <fieldset class="slds-form--compound">
                        <div class="slds-form-element__group">
                            <div class="slds-form-element__row slds-grid_vertical-align-end">
                                <div class="slds-form-element slds-size--1-of-2">
                                    <img src="{!v.orgUrl+'/sfc/servlet.shepherd/document/download/'+v.car.ECS_ImageID__c}"/>
                                </div>
                            </div>
                            <div class="slds-form-element__row slds-grid_vertical-align-end">
                                <div class="slds-form-element slds-size--1-of-3">
                                    <p class="slds-text-body_small slds-text-color_weak">Product Name: </p>
                                    <ui:outputText value="{!v.car.Name}" title="Product Name"
                                                   class="slds-text-heading_medium"/>

                                </div>
                                <div class="slds-form-element slds-size--1-of-3">
                                    <p class="slds-text-body_small slds-text-color_weak">Car Model: </p>
                                    <ui:outputText value="{!v.car.ECS_Model__c}" title="Car Model"
                                                   class="slds-text-heading_medium"/>
                                </div>
                                <div class="slds-form-element slds-size--1-of-3">
                                <p class="slds-text-body_small slds-text-color_weak">Engine Size: </p>
                                <ui:outputText value="{!v.car.ECS_EngineSize__c}" title="Engine Size"
                                               class="slds-text-heading_medium"/>
                            </div>
                            </div>
                            <div class="slds-form-element__row slds-grid_vertical-align-end">
                                <div class="slds-form-element slds-size--1-of-3">
                                    <p class="slds-text-body_small slds-text-color_weak">Model Year: </p>
                                    <ui:outputText value="{!v.car.ECS_ProductionYear__c}" title="Model Year"
                                                   class="slds-text-heading_medium"/>
                                </div>
                                <div class="slds-form-element slds-size--1-of-3">
                                    <p class="slds-text-body_small slds-text-color_weak">VIN: </p>
                                    <ui:outputText value="{!v.car.ECS_VinNumber__c}" title="VIN"
                                                   class="slds-text-heading_medium"/>
                                </div>
                                <div class="slds-form-element slds-size--1-of-3">
                                    <p class="slds-text-body_small slds-text-color_weak">Fuel Type: </p>
                                    <ui:outputText value="{!v.car.ECS_FuelType__c}" title="FuelType"
                                                   class="slds-text-heading_medium"/>
                                </div>
                            </div>

                            <div class="slds-form-element__row slds-grid_vertical-align-end">
                                <div class="slds-form-element slds-size--1-of-3">
                                    <p class="slds-text-body_small slds-text-color_weak">Body Style: </p>
                                    <ui:outputText value="{!v.car.ECS_BodyStyle__c}" title="BodyStyle"
                                                   class="slds-text-heading_medium"/>
                                </div>
                                <div class="slds-form-element slds-size--1-of-3">
                                    <p class="slds-text-body_small slds-text-color_weak">Transmission: </p>
                                    <ui:outputText value="{!v.car.ECS_Transmission__c}" title="Transmission"
                                                   class="slds-text-heading_medium"/>
                                </div>



                            </div>


                        </div>
                    </fieldset>
                </div>
            </lightning:card>
        </lightning:layoutItem>
    </lightning:layout>


</aura:component>





